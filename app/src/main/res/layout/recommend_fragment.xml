<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7D7D7"
    >
    <!--title-->
    <LinearLayout
        android:id="@+id/llSearchFrame"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/search_frame"/>
        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/refresh"/>

    </LinearLayout>
    <!--分隔线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llSearchFrame" />

    <!--刷新-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_below="@+id/llSearchFrame"
        android:background="#fff"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never">
            <!--ScrollView中只能放置一个直接子布局-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门活动"
                    android:layout_marginBottom="2dp"
                />
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="vertical" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/hot_activity_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/ll"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="活动标题"/>
                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="right"
                        android:layout_marginBottom="24.0dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:padding="15.0dip"
                            android:src="@drawable/global_recommend_dot" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:padding="15.0dip"
                            android:src="@drawable/global_recommend_dot" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:padding="15.0dip"
                            android:src="@drawable/global_recommend_dot" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:padding="15.0dip"
                            android:src="@drawable/global_recommend_dot" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/statuses_item_interval"
                    android:background="#D7D7D7"/>
<!--
                &lt;!&ndash;热门活动&ndash;&gt;
                <LinearLayout
                    android:id="@+id/ll_hot_activity"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热门活动"
                        android:layout_marginBottom="2dp"
                    />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:id="@+id/rv_hot_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/statuses_item_interval"
                        android:background="#D7D7D7"/>
                </LinearLayout>
-->

                <!--推荐用户-->

                <LinearLayout
                    android:id="@+id/ll_recommend_user"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="推荐用户"
                            android:layout_marginBottom="2dp"
                        />
                        <!--<TextView-->
                            <!--android:id="@+id/show_all_recommend_users"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="right"-->
                            <!--android:text="显示全部"-->
                            <!--android:layout_marginBottom="2dp"-->
                        <!--/>-->
                    </FrameLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:layout_marginBottom="10dp"
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/statuses_item_interval"
                        android:background="#D7D7D7"/>
                </LinearLayout>

                <!--推荐活动-->
                <!--这里直接往LinearLayout中添加item项-->
                <LinearLayout
                    android:id="@+id/ll_recommend_activity"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/add_activity"
        app:backgroundTint="@color/floating_button"
    />

    <!--加载数据为空时显示-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_emptyview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/global_nodata_prompt"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="暂无推荐信息"
            android:textColor="#F76950"
            android:visibility="gone"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>
